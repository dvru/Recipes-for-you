<%= stylesheet_link_tag "users" %>

<h3><% if flash[:errors] %> 
<% flash[:errors].each do |error| %> 
<%= error %><br>
<% end %> 
<% end %></h3>







<h1><%= form_for @user do |f| %></h1>
<h1><%= f.label :username %></h1>
<h1><%= f.text_field :name %></h1>
<br>
<h1><%= f.label :password %></h1>
<h1><%= f.password_field :password %></h1>
<br>
<h1><%= f.label :password_confirmation %></h1>
<h1><%= f.password_field :password_confirmation %></h1>
<br>
<h1><%= f.submit %></h1>
<h1><% end %></h1>
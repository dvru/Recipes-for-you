<% if flash[:error]%>
    <% flash[:error].each do | error |%>
        <%= error %><br>
    <% end %>
<% end %>

<%= form_for @user do |f| %>
<%= f.label :username %>
<%= f.text_field :name %>
<%= f.label :password %>
<%= f.password_field :password %>
<%= f.label :password_confirmation %>
<%= f.password_field :password_confirmation %>
<%= f.submit %>
<% end %>
<% if flash[:errors] %> 
    <%= flash[:errors] %> 
<%end%>

<%= form_with url:'/login', method: 'post' do |f| %>
<%= f.label :Username %>
<%= f.text_field :name %>
<%= f.label :password %>
<%= f.password_field :password %>
<%= f.submit "Login" %>
<% end %>

<%= link_to  'Sign up', new_user_path %><br>


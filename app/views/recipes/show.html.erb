<h1><%=@recipe.title%></h1>
<h4>Description: <%=@recipe.description%></h4>
<h4>Cook Time: <%= @recipe.cook_time%> mins </h4>
<h4>Created by: <%=@recipe.user.name%></h4>
<h4>Rating: <%= @avg_rate%>
<br>
<h4>Cooking Utensils Requirement</h4>
<% @recipe.utensils.each do |utensil|%>
    <%= utensil.name%><br>
<%end%>

<h4>Ingredients Required</h4>
<% @recipe.ingredients.each do |ingredient|%>
    <%= ingredient.quantity %> 
    <%= ingredient.measurement_type%>
    <%= ingredient.name%><br>
<%end%>

<%= form_for @review do |f| %>
<br>
<%= f.label :rating %>
<%= f.text_field :rating %>
<br>
<%= f.label :comment %>
<%= f.text_area :comment %>
<br>
<%= f.hidden_field :recipe_id, :value => @recipe.id %> 
<br>
<%= f.hidden_field :user_id, :value => @user.id %>
<%= f.submit %>
<% end %>

<br>
<% if @recipe.user_id == session[:user_id] %>
<a href="/recipes/<%= @recipe.id%>/edit"><button>Edit Recipes</button><a>
<%end%>


<br><a href="/recipes"><button>All Recipes</button><a>


<%= form_for @recipe, method: :delete do |f|%>
<br><%= f.submit "Remove Recipe"%>
<%end%>
